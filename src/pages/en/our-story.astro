---
import Layout from '../../layouts/Layout.astro';

const timeline = [
  {
    year: '1950',
    title: 'Melit贸n Arrives in the Valley',
    description: 'Melit贸n Zavala, our grandfather, arrives in Valle de Guadalupe with an agricultural vision and passion for the land. He begins cultivating the land we inherit today.',
    image: '/images/meliton-legacy.jpg'
  },
  {
    year: '2015',
    title: 'The Torres Siblings Reclaim the Land',
    description: 'Gabriel, Lilibeth, and Omar Torres decide to honor their grandfather\'s legacy, reclaiming the family lands and beginning their winemaking dream.',
    image: '/images/family/owners.jpg'
  },
  {
    year: '2020',
    title: 'First Vintage',
    description: 'After years of preparation and study, we produce our first wine harvest, maintaining principles of sustainable agriculture and artisanal production.',
    image: '/images/vineyard-gallery/hands-harvest.jpg'
  },
  {
    year: '2024',
    title: 'Today',
    description: 'Torres del Valle establishes itself as a boutique winery that honors family tradition while innovating with modern winemaking techniques.',
    image: '/images/vineyard-gallery/golden-hour-landscape.jpg'
  }
];

const siblings = [
  {
    name: 'Gabriel Torres',
    role: 'Viticulturist',
    bio: 'Guardian of our vines. Gabriel cultivates each vine with inherited wisdom and an absolute dedication to the terroir that his grandfather Melit贸n first began to work.',
    image: '/images/family/gabriel-torres.jpg'
  },
  {
    name: 'Lilibeth Torres',
    role: 'Winemaker',
    bio: 'The creative soul behind every bottle. Lilibeth transforms the nobility of our grapes into highly expressive wines, balancing technique and art.',
    image: '/images/family/lilibeth-torres.jpg'
  },
  {
    name: 'Omar Torres',
    role: 'Hospitality & Vision',
    bio: 'Architect of memorable experiences. Omar ensures every visitor feels the Torres family warmth, narrating our story in every corner of the Valley.',
    image: '/images/family/omar-torres.jpg'
  }
];

const values = [
  {
    title: 'Heritage as Foundation',
    description: 'We honor our grandfather\'s legacy with every decision we make.'
  },
  {
    title: 'Terroir Transparency',
    description: 'Our wines honestly reflect the dust, sun, and salt of our land.'
  },
  {
    title: 'Warm Precision',
    description: 'Premium yet approachable, with meticulous attention to every detail.'
  },
  {
    title: 'Sustainable Progress',
    description: 'Regenerative practices that respect our land and community.'
  },
  {
    title: 'Bilingual Soul',
    description: 'Mexican heart with an open invitation to the world.'
  }
];
---

<Layout 
  title="Our Story" 
  description="Discover the Torres family legacy and how we honor our grandfather Melit贸n Zavala's winemaking tradition in Valle de Guadalupe."
  locale="en"
  headerTheme="dark"
>
  <!-- Hero Section -->
  <section class="relative pt-48 pb-32 bg-crema overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute top-0 right-0 w-1/2 h-full bg-stone/5 -skew-x-12 translate-x-1/4"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-center">
        <div class="lg:col-span-7 reveal">
          <span class="inline-block px-4 py-1.5 border border-clay/30 rounded-full text-[0.6rem] tracking-[0.3em] uppercase text-clay font-body mb-8">The Torres Legacy</span>
          <h1 class="text-6xl md:text-8xl font-display font-light text-charcoal mb-8 leading-[1.1] tracking-tight">
            Roots That <span class="italic text-clay">Define Us</span>
          </h1>
          <p class="text-xl md:text-2xl text-sage/80 mb-12 leading-relaxed font-light max-w-2xl">
            The story of Torres del Valle is a story of family, respect for the land, and passion for creating wines that speak honestly of our terroir.
          </p>
          <div class="flex flex-col sm:flex-row gap-6">
            <a href="/en/reservations" class="group relative inline-flex items-center justify-center px-10 py-4 bg-clay text-crema font-body text-xs tracking-[0.2em] uppercase transition-all duration-500 hover:bg-clay/90 overflow-hidden">
              <span class="relative z-10">Book Your Visit</span>
              <div class="absolute inset-0 bg-white/10 transform -translate-x-full transition-transform duration-500 group-hover:translate-x-0"></div>
            </a>
          </div>
        </div>
        
        <div class="lg:col-span-5 reveal relative">
          <div class="absolute -inset-4 border border-warm-sand translate-x-6 translate-y-6 -z-10"></div>
          <div class="aspect-[4/5] overflow-hidden shadow-2xl">
            <img 
              src="/images/family-portrait.jpg" 
              alt="The Torres siblings: Gabriel, Lilibeth, and Omar" 
              class="w-full h-full object-cover transform transition-transform duration-1000 hover:scale-110"
              loading="lazy"
            />
          </div>
          <!-- Corner accent -->
          <div class="absolute bottom-0 left-0 w-24 h-24 bg-clay/10 -translate-x-12 translate-y-12 rounded-full blur-3xl"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="py-32 bg-crema relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-24 reveal">
        <span class="inline-block text-clay tracking-[0.3em] uppercase text-xs font-semibold mb-4">Passing of Time</span>
        <h2 class="text-5xl md:text-6xl font-display font-light text-charcoal mb-6">
          Our Journey
        </h2>
        <div class="w-24 h-px bg-warm-sand mx-auto"></div>
      </div>
      
      <div class="relative">
        <!-- Vertical Line -->
        <div class="absolute left-1/2 top-0 bottom-0 w-px bg-warm-sand/50 -translate-x-1/2 hidden lg:block"></div>
        
        <div class="space-y-32">
          {timeline.map((item, index) => (
            <div class={`flex flex-col lg:flex-row items-center gap-12 lg:gap-24 reveal ${index % 2 !== 0 ? 'lg:flex-row-reverse' : ''}`}>
              <!-- Image/Visual Side -->
              <div class="lg:w-1/2 relative">
                <div class={`absolute top-0 ${index % 2 === 0 ? '-right-4' : '-left-4'} w-full h-full border border-warm-sand -z-10 translate-y-4`}></div>
                <div class="aspect-video overflow-hidden shadow-xl">
                  <img 
                    src={item.image} 
                    alt={item.title}
                    class="w-full h-full object-cover transform transition-transform duration-1000 hover:scale-110"
                    loading="lazy"
                  />
                </div>
              </div>
              
              <!-- Content Side -->
              <div class={`lg:w-1/2 text-center ${index % 2 === 0 ? 'lg:text-left' : 'lg:text-right'}`}>
                <div class={`inline-flex items-center justify-center w-16 h-16 rounded-full border border-clay text-clay font-display text-xl mb-6 bg-crema relative z-10`}>
                  {item.year.substring(2)}
                  <div class="absolute inset-0 rounded-full bg-clay/5 animate-pulse"></div>
                </div>
                <h3 class="text-4xl font-display font-light text-charcoal mb-6 tracking-tight">
                  {item.title}
                </h3>
                <p class="text-sage leading-relaxed font-light text-lg max-w-lg mx-auto lg:mx-0">
                  {item.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Family Grid -->
  <section class="py-32 bg-stone/5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-24 reveal">
        <span class="inline-block text-clay tracking-[0.3em] uppercase text-xs font-semibold mb-4">The Protagonists</span>
        <h2 class="text-5xl md:text-6xl font-display font-light text-charcoal mb-6">
          The Torres Family
        </h2>
        <div class="w-24 h-px bg-warm-sand mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-16">
        {siblings.map((sibling, index) => (
          <div class="group reveal" style={`animation-delay: ${index * 0.2}s;`}>
            <div class="relative mb-10 overflow-hidden shadow-xl aspect-square">
              <img 
                src={sibling.image} 
                alt={sibling.name}
                class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-1000 group-hover:scale-110"
                loading="lazy"
              />
              <div class="absolute inset-0 border-[12px] border-crema/20 pointer-events-none"></div>
            </div>
            <div class="text-center">
              <span class="inline-block text-clay text-[0.6rem] tracking-[0.3em] uppercase font-bold mb-3">{sibling.role}</span>
              <h3 class="text-3xl font-display font-light text-charcoal mb-4">
                {sibling.name}
              </h3>
              <p class="text-sage leading-relaxed font-light text-sm italic">
                "{sibling.bio}"
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Values Grid -->
  <section class="py-32 bg-vineyard-green text-crema overflow-hidden relative">
    <div class="absolute top-0 left-0 w-full h-full opacity-5 pointer-events-none">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] border border-crema rounded-full"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[1000px] h-[1000px] border border-crema rounded-full"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-24 reveal">
        <span class="inline-block text-crema/60 tracking-[0.3em] uppercase text-[0.6rem] font-bold mb-4">Our Philosophy</span>
        <h2 class="text-5xl md:text-6xl font-display font-light mb-8">
          Our Values
        </h2>
        <div class="w-24 h-px bg-crema/20 mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-y-20 gap-x-16 border-t border-crema/10 pt-20">
        {values.map((value, index) => (
          <div class="reveal" style={`animation-delay: ${index * 0.1}s;`}>
            <span class="text-4xl font-display italic text-crema/20 mb-6 block">0{index + 1}</span>
            <h3 class="text-2xl font-display font-light mb-6 tracking-wide">
              {value.title}
            </h3>
            <p class="text-crema/70 leading-relaxed font-light text-sm tracking-wide">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-32 bg-crema">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center bg-clay py-20 relative overflow-hidden shadow-2xl">
      <div class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-48 h-48 bg-black/5 rounded-full translate-y-1/2 -translate-x-1/2"></div>
      
      <div class="reveal relative z-10">
        <h2 class="text-5xl md:text-7xl font-display font-light text-crema mb-8 leading-tight">
          Visit Torres del Valle
        </h2>
        <p class="text-xl md:text-2xl mb-12 text-crema/80 font-light max-w-2xl mx-auto">
          Discover the story behind every wine and live the legacy of our family.
        </p>
        <a href="/en/reservations" class="group relative inline-flex items-center justify-center px-12 py-5 bg-crema text-clay font-body text-xs tracking-[0.3em] uppercase transition-all duration-500 overflow-hidden">
          <span class="relative z-10">Plan Visit</span>
          <div class="absolute inset-0 bg-warm-sand transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
        </a>
      </div>
    </div>
  </section>
</Layout>