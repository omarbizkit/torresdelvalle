---
import Layout from '../layouts/Layout.astro';

const timeline = [
  {
    year: '1950',
    title: 'Melitón Llega al Valle',
    titleEn: 'Melitón Arrives in the Valley',
    description: 'Melitón Zavala, nuestro abuelo, llega al Valle de Guadalupe con una visión agrícola y una pasión por la tierra. Comienza a cultivar la tierra que hoy heredamos.',
    descriptionEn: 'Melitón Zavala, our grandfather, arrives in Valle de Guadalupe with an agricultural vision and passion for the land. He begins cultivating the land we inherit today.',
    image: '/images/meliton-legacy.jpg'
  },
  {
    year: '2015',
    title: 'Los Hermanos Torres Recuperan la Tierra',
    titleEn: 'The Torres Siblings Reclaim the Land',
    description: 'Gabriel, Lilibeth y Omar Torres deciden honrar el legado de su abuelo, recuperando las tierras familiares y comenzando su sueño vitivinícola.',
    descriptionEn: 'Gabriel, Lilibeth, and Omar Torres decide to honor their grandfather\'s legacy, reclaiming the family lands and beginning their winemaking dream.',
    image: '/images/family-portrait.jpg'
  },
  {
    year: '2020',
    title: 'Primera Cosecha',
    titleEn: 'First Vintage',
    description: 'Después de años de preparación y estudio, producimos nuestra primera cosecha de vinos, manteniendo los principios de agricultura sostenible y elaboración artesanal.',
    descriptionEn: 'After years of preparation and study, we produce our first wine harvest, maintaining principles of sustainable agriculture and artisanal production.',
