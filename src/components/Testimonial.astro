---
export interface Props {
  quote: string;
  author: string;
  location: string;
  image: string;
}

const { quote, author, location, image } = Astro.props;
---

<div class="bg-crema/10 rounded-lg p-6 backdrop-blur-sm">
  <!-- Quote -->
  <blockquote class="text-lg font-light italic mb-6 leading-relaxed">
    "{quote}"
  </blockquote>
  
  <!-- Author -->
  <div class="flex items-center">
    <img 
      src={image} 
      alt={author}
      class="w-12 h-12 rounded-full object-cover mr-4"
      loading="lazy"
    />
    <div>
      <cite class="font-medium text-crema not-italic">{author}</cite>
      <p class="text-crema/70 text-sm">{location}</p>
    </div>
  </div>
</div>