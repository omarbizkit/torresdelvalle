---
export interface Props {
  title: string;
  titleEn?: string;
  duration: string;
  price: string;
  groupSize: string;
  includes: string;
  vibe: string;
  image: string;
  slug: string;
  currentLocale?: 'es' | 'en';
}

const { 
  title, 
  titleEn, 
  duration, 
  price, 
  groupSize, 
  includes, 
  vibe, 
  image, 
  slug,
  currentLocale = 'es'
} = Astro.props;

const displayTitle = currentLocale === 'es' ? title : (titleEn || title);
---

<div class="group relative bg-white overflow-hidden transition-all duration-700 hover:shadow-2xl">
  <!-- Image container with taller aspect ratio -->
  <div class="relative aspect-[3/4] overflow-hidden">
    <img 
      src={image} 
      alt={displayTitle}
      class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110"
      loading="lazy"
    />
    <!-- Subtle overlay -->
    <div class="absolute inset-0 bg-charcoal/10 group-hover:bg-charcoal/30 transition-colors duration-700"></div>
    
    <!-- Experience type/vibe tag -->
    <div class="absolute top-6 left-6">
      <span class="inline-block px-3 py-1 bg-crema/90 backdrop-blur-sm text-[0.6rem] tracking-[0.3em] uppercase text-charcoal font-semibold">
        {vibe}
      </span>
    </div>

    <!-- Hover details -->
    <div class="absolute inset-0 flex flex-col justify-end p-8 bg-gradient-to-t from-charcoal/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700">
      <p class="text-crema/90 text-sm font-light leading-relaxed mb-4 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-700 delay-100">
        {includes}
      </p>
    </div>
  </div>
  
  <!-- Content area -->
  <div class="p-8 bg-crema/50 border-x border-b border-warm-sand/30 flex flex-col h-full">
    <div class="mb-6">
      <h3 class="text-3xl font-display font-light text-charcoal mb-4 tracking-tight">
        {displayTitle}
      </h3>
      
      <div class="flex flex-wrap gap-x-6 gap-y-2 text-[0.7rem] uppercase tracking-[0.2em] text-sage font-medium">
        <span class="flex items-center">
          <span class="w-1.5 h-1.5 rounded-full bg-clay mr-2"></span>
          {duration}
        </span>
        <span class="flex items-center">
          <span class="w-1.5 h-1.5 rounded-full bg-clay mr-2"></span>
          {groupSize}
        </span>
      </div>
    </div>
    
    <div class="mt-auto pt-8 border-t border-warm-sand/30 flex items-end justify-between">
      <div class="flex flex-col">
        <span class="text-[0.6rem] uppercase tracking-[0.3em] text-sage mb-1">Precio</span>
        <span class="text-2xl font-display text-clay">{price}</span>
      </div>
      
      <a 
        href={`/reservaciones?experience=${slug}`}
        class="group/btn relative inline-flex items-center justify-center px-6 py-3 bg-clay text-crema text-[0.7rem] tracking-[0.2em] uppercase transition-all duration-500 overflow-hidden"
      >
        <span class="relative z-10">{currentLocale === 'es' ? 'Reservar' : 'Book'}</span>
        <div class="absolute inset-0 bg-charcoal transform -translate-x-full transition-transform duration-500 group-hover/btn:translate-x-0"></div>
      </a>
    </div>
  </div>
</div>