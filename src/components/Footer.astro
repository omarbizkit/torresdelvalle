---
export interface Props {
  currentLocale?: 'es' | 'en';
}

const { currentLocale = 'es' } = Astro.props;

const content = {
  es: {
    newsletter: 'Recibe nuestras novedades',
    newsletterDesc: 'Enterado de nuevas añadas y eventos exclusivos',
    emailPlaceholder: 'Tu correo electrónico',
    subscribe: 'Suscribir',
    quickLinks: 'Enlaces rápidos',
    contact: 'Contacto',
    address: 'Km 85, Valle de Guadalupe\nEnsenada, Baja California, México',
    phone: '+52 646 123 4567',
    email: 'hola@torresdelvalle.mx',
    social: 'Síguenos',
    copyright: '© 2024 Torres del Valle. Heredamos la tierra. Respetamos el Valle.'
  },
  en: {
    newsletter: 'Stay Updated',
    newsletterDesc: 'Be the first to know about new vintages and exclusive events',
    emailPlaceholder: 'Your email address',
    subscribe: 'Subscribe',
    quickLinks: 'Quick Links',
    contact: 'Contact',
    address: 'Km 85, Valle de Guadalupe\nEnsenada, Baja California, Mexico',
    phone: '+52 646 123 4567',
    email: 'hola@torresdelvalle.mx',
    social: 'Follow Us',
    copyright: '© 2024 Torres del Valle. We inherit the land. We respect the Valley.'
  }
};

const currentContent = content[currentLocale as keyof typeof content];

const quickLinks = {
  es: [
    { href: '/nuestra-historia', label: 'Nuestra Historia' },
    { href: '/vinos', label: 'Vinos' },
    { href: '/experiencias', label: 'Experiencias' },
    { href: '/reservaciones', label: 'Reservaciones' }
  ],
  en: [
    { href: '/en/our-story', label: 'Our Story' },
    { href: '/en/wines', label: 'Wines' },
    { href: '/en/experiences', label: 'Experiences' },
    { href: '/en/reservations', label: 'Reservations' }
  ]
};

const currentLinks = quickLinks[currentLocale as keyof typeof quickLinks];
---

<footer class="bg-stone text-crema py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12">
      <!-- Brand & Newsletter -->
      <div class="lg:col-span-2">
        <div class="inline-flex items-center bg-crema px-6 py-4 mb-10 shadow-xl border border-crema/10">
          <div class="h-14 w-14 overflow-hidden flex items-center justify-center">
            <img src="/images/brand/logo.png" alt="" class="w-full h-full object-cover scale-[1.4]" />
          </div>
          <div class="ml-6 h-8 w-px bg-clay/20"></div>
          <div class="ml-6 flex flex-col text-clay">
            <span class="text-3xl font-display font-medium leading-none">Torres del Valle</span>
            <span class="text-[0.6rem] tracking-[0.5em] uppercase mt-2 opacity-70">Vineyards</span>
          </div>
        </div>
        <h3 class="text-xl font-display font-semibold mb-4">{currentContent.newsletter}</h3>
        <p class="text-crema/80 mb-6 text-sm leading-relaxed max-w-sm">{currentContent.newsletterDesc}</p>
        
        <!-- Mailchimp Form Placeholder -->
        <form class="space-y-3">
          <input 
            type="email" 
            placeholder={currentContent.emailPlaceholder}
            class="w-full px-4 py-2 bg-crema/10 border border-crema/20 rounded text-crema placeholder-crema/60 focus:outline-none focus:border-crema/40"
            required
          />
          <button 
            type="submit"
            class="w-full px-4 py-2 bg-clay text-crema font-medium rounded hover:bg-clay/90 transition-colors"
          >
            {currentContent.subscribe}
          </button>
        </form>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-xl font-display font-semibold mb-4">{currentContent.quickLinks}</h3>
        <ul class="space-y-2">
          {currentLinks.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="text-crema/80 hover:text-crema transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h3 class="text-xl font-display font-semibold mb-4">{currentContent.contact}</h3>
        <div class="space-y-3 text-sm">
          <div class="flex items-start space-x-2">
            <svg class="w-4 h-4 mt-1 text-crema/60" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
            <address class="not-italic text-crema/80 leading-relaxed">
              {currentContent.address.split('\n').map((line, i) => (
                <>{i > 0 && <br />}{line}</>
              ))}
            </address>
          </div>
          
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-crema/60" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            <a href="tel:+526461234567" class="text-crema/80 hover:text-crema transition-colors">
              {currentContent.phone}
            </a>
          </div>
          
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-crema/60" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
            <a href="mailto:hola@torresdelvalle.mx" class="text-crema/80 hover:text-crema transition-colors">
              {currentContent.email}
            </a>
          </div>
        </div>
      </div>
      
      <!-- Social & Hours -->
      <div>
        <h3 class="text-xl font-display font-semibold mb-4">{currentContent.social}</h3>
        
        <!-- Social Links -->
        <div class="flex space-x-4 mb-6">
          <a href="#" class="text-crema/60 hover:text-crema transition-colors" aria-label="Instagram">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.004 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.611-3.132-1.552l-.555.238c-.553.238-1.155.238-1.709 0l-.555-.238C1.915 16.377.764 16.988-.533 16.988c-.852 0-1.553-.701-1.553-1.553V7.553C-2.086 6.701-1.385 6 .533 6c1.297 0 2.448.611 3.132 1.552l.555-.238c.553-.238 1.155-.238 1.709 0l.555.238c.684-.941 1.835-1.552 3.132-1.552 1.419 0 2.553.701 2.553 1.553v7.882c0 .852-.701 1.553-1.553 1.553z"/>
            </svg>
          </a>
          
          <a href="https://wa.me/+526461234567" class="text-crema/60 hover:text-crema transition-colors" aria-label="WhatsApp">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
          </a>
        </div>
        
        <!-- Hours -->
        <div class="text-sm">
          <h4 class="font-medium mb-2">{currentLocale === 'es' ? 'Horario' : 'Hours'}</h4>
          <div class="text-crema/80 space-y-1">
            <p>{currentLocale === 'es' ? 'Miércoles - Domingo' : 'Wednesday - Sunday'}</p>
            <p>11:00 AM - 6:00 PM</p>
            <p class="text-xs mt-2">{currentLocale === 'es' ? 'Reserva recomendada' : 'Reservations recommended'}</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="border-t border-crema/20 mt-12 pt-8 text-center">
      <p class="text-crema/60 text-sm">{currentContent.copyright}</p>
    </div>
  </div>
</footer>